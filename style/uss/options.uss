.options-container {
    display: flex;
    height: 100vh;
}

.options-left {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 20px;
}

.options-right {
    flex: 1;
    padding: 20px;
}

.option-button {
    background-color: #333;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;

}